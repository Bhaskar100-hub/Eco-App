            android:layout_marginTop="8dp"
            android:background="#77888888"
            android:layout_below="@+id/ll_outer3"/>

        <nl.bryanderidder.themedtogglebuttongroup.ThemedToggleButtonGroup
            android:id="@+id/ttButtonGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:justifyContent="space_between"
            app:flexWrap="wrap"
            app:toggle_selectableAmount="3"
            app:toggle_requiredAmount="1"
            app:toggle_selectAnimation="circular_reveal"
            android:layout_below="@id/ll_outer3"
            android:layout_marginTop="8dp"> <!-- this attribute is from the underlying FlexboxLayout -->

            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:id="@+id/btn1"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:text="2022-23"
                app:toggle_selectedBackgroundColor="#FFC107"/>

            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:id="@+id/btn2"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:text="2021-22"
                app:toggle_selectedBackgroundColor="#FF5722"/>

            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:id="@+id/btn3"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:text="2020-21"
                app:toggle_selectedBackgroundColor="#FF5722"/>

            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:id="@+id/btn4"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:text="2019-20"
                app:toggle_selectedBackgroundColor="#E91E63"/>


            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:layout_margin="10dp"
                android:id="@+id/btn5"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:text="2018-19"
                app:toggle_selectedBackgroundColor="#4CAF50"/>


            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
